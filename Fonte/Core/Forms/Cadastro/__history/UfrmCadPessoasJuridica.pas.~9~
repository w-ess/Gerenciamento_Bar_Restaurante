{$R *.dfm}

uses UDmBD;

procedure TFrmCadPessoasJuridica.Button1Click(Sender: TObject);
begin
  if FDQryPai.State in [dsInsert] then
    begin
      FDQryPai.Post;
      ActSalvarUpdate(Sender);
    end;
  FDQryFilho.Insert;
  FDQryFilho.FieldByName('DESCRICAO').AsString := ComboBox1.Text;
  FDQryFilho.Post;

end;

end.
